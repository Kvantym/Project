@* _LoginPartial.cshtml *@
<li class="nav-item">
    <div class="nav-link text-light">
        @if (User.Identity.IsAuthenticated)
        {
           <div class="d-flex align-items-center">
    <span class="me-2">Вітаю: @User.Identity.Name</span>
    <a class="btn btn-outline-warning" asp-controller="Account" asp-action="Logout">Вихід</a>
</div>

        }
        else
        {
            <div class="d-flex">
                <a class="btn btn-warning me-2" asp-controller="Account" asp-action="Login">Вхід</a>
                <a class="btn btn-outline-warning" asp-controller="Account" asp-action="Register">Реєстрація</a>
            </div>


        }
    </div>
</li>
